// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String @id @default(uuid()) @map("_id")
  name        String
  price       Int
  description String
  amount      Int
  measureUnit String
}
